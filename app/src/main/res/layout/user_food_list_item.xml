<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0CB">

    <TextView
        android:id="@+id/tvUserFoodListNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/tvUserFoodListNameLabel"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivUserFoodListImage"
        tools:text="Coca-Cola Zero 330ml" />

    <TextView
        android:id="@+id/tvUserFoodListVeganLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/tvUserFoodListVeganLabel"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserFoodListAllergensLabel"
        tools:text="Maybe" />

    <ImageView
        android:id="@+id/ivUserFoodListImage"
        android:layout_width="168dp"
        android:layout_height="181dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/ivUserFoodListImage"
        android:src="@drawable/food_item_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserFoodListVegetarianLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/tvFoodInfoVegetarian"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserFoodListVeganLabel"
        tools:text="Maybe" />

    <TextView
        android:id="@+id/tvUserFoodListNUTRIScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/tvUserFoodListNUTRIScoreLabel"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserFoodListVegetarianLabel"
        tools:text="b" />

    <TextView
        android:id="@+id/tvUserFoodListNOVAScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/tvUserFoodListNOVAScoreLabel"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserFoodListNUTRIScoreLabel"
        tools:text="4" />

    <TextView
        android:id="@+id/tvUserFoodListAllergensLabel"
        android:layout_width="394dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/tvUserFoodListAllergensLabel"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserFoodListNameLabel"
        tools:text="carbonated water, colour (caramel e150d), acid (phosphoric acid), sweeteners (aspartame, acesulfame k), natural flavourings (including caffeine), acidity regulator (sodium citrates) contains a source of phenylalanine" />
</androidx.constraintlayout.widget.ConstraintLayout>