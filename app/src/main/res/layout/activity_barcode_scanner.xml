<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0CB"
    tools:context=".BarcodeScannerActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="398dp"
        android:layout_height="740dp"
        android:contentDescription="@string/ivRoundRectangleScanner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScanFoodItemLabel2"
        app:layout_constraintVertical_bias="0.921"
        app:srcCompat="@drawable/huge_rounded_vertical_rectangle" />

    <TextView
        android:id="@+id/tvScanFoodItemLabel2"
        android:layout_width="280dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/big_rounded_rectangle"
        android:gravity="center"
        android:text="@string/tvScanFoodItemLabel"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivScannerImage"
        android:layout_width="356dp"
        android:layout_height="395dp"
        android:contentDescription="@string/ivScanScanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/big_rounded_border_rectangle" />

    <Button
        android:id="@+id/btnScan2"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:text="@string/btnScan"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeNOVAScoreLabel"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="167dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="@string/btnCamera"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScanFoodItemLabel2"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="167dp"
        android:layout_height="47dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:text="@string/btnGallery"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScanFoodItemLabel2"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tvBarcodeNOVAScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="@string/tvFoodInfoNOVAScoreLabel"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeNUTRIScoreLabel" />

    <TextView
        android:id="@+id/tvBarcodeNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text="@string/tvFoodInfoNameLabel"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivScannerImage" />

    <TextView
        android:id="@+id/tvBarcodeAllergensLabel"
        android:layout_width="143dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="@string/tvFoodInfoAllergensLabel"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeNameLabel" />

    <TextView
        android:id="@+id/tvBarcodeNUTRIScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="@string/tvFoodInfoNUTRIScoreLabel"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeIngredientsAnalysisLabel" />

    <TextView
        android:id="@+id/tvBarcodeFoodNUTRIScore"
        android:layout_width="119dp"
        android:layout_height="38dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvBarcodeNUTRIScoreLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeIngredientsAnalysis"
        tools:text="Nutrition Score:" />

    <TextView
        android:id="@+id/tvBarcodeFoodNOVAScore"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvBarcodeNOVAScoreLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeFoodNUTRIScore"
        tools:text="NOVA Score:" />

    <TextView
        android:id="@+id/tvBarcodeFoodAllergens"
        android:layout_width="218dp"
        android:layout_height="66dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvBarcodeAllergensLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeFoodName"
        tools:text="Allergens From Ingredients:" />

    <TextView
        android:id="@+id/tvBarcodeFoodName"
        android:layout_width="235dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toEndOf="@+id/tvBarcodeNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/ivScannerImage"
        tools:text="Name:" />

    <TextView
        android:id="@+id/tvBarcodeIngredientsAnalysis"
        android:layout_width="174dp"
        android:layout_height="52dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvBarcodeIngredientsAnalysisLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeFoodAllergens"
        tools:text="Ingredients Analysis:" />

    <TextView
        android:id="@+id/tvBarcodeIngredientsAnalysisLabel"
        android:layout_width="119dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/tvFoodInfoIngredientsAnalysisLabel"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBarcodeAllergensLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>